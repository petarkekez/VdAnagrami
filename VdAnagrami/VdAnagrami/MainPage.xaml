             x:Class="VdAnagrami.MainPage" 
             BackgroundColor="{x:Static local:Resources.Colors.PageBackground}">
    <StackLayout>
        <Label Text="" 
               VerticalOptions="Center" 
               HorizontalOptions="Center"  Margin="0,10,20,0" x:Name="lblSolved" TextColor="{x:Static local:Resources.Colors.TextHighlight}"/>

        <Grid x:Name="gridAnagrams" Margin="10,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <!--<Grid.RowDefinitions>
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>-->

        </Grid>
    </StackLayout>
</ContentPage>